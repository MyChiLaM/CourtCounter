<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.courtcounter.MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Team A"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="50sp" />

    <Button
        android:id="@+id/addThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addThreeToTeamA"
        android:text="+3 POINTS"
        android:textSize="25sp" />

    <Button
        android:id="@+id/addTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addTwoToTeamA"
        android:text="+2 POINTS"
        android:textSize="25sp" />

    <Button
        android:id="@+id/addOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addOneToTeamA"
        android:text="FREE THROW"
        android:textSize="25sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team B"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/addThree3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addThreeToTeamB"
            android:text="+3 POINTS"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addTwo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addTwoToTeamB"
            android:text="+2 POINTS"
            android:textSize="25sp" />

        <Button
            android:id="@+id/addOne1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addOneToTeamB"
            android:text="FREE THROW"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="resetToTeamAB"
        android:textSize="30sp"/>
</LinearLayout>

